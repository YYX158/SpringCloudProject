<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sc.dao.DeptDao">
    <insert id="addDept" parameterType="pojo.Dept">
        insert into dept (dname,db_scoure)
        values (#{dname},DATABASE());
    </insert>

    <select id="queryById" resultType="pojo.Dept" parameterType="Long">
        select * from dept where deptno=#{deptno};
    </select>

    <select id="queryAll" resultType="pojo.Dept" >
        select * from dept;
    </select>
</mapper>